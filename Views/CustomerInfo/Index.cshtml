@model IEnumerable<sproject.Models.CustomerInfo>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customer_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customer_phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customer_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer_phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.customerinfo_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.customerinfo_id">Details</a> |
