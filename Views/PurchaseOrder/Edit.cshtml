@model sproject.Models.PurchaseOrder

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>PurchaseOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="purchase_id" />
            <div class="form-group">
                <label asp-for="purchase_date" class="control-label"></label>
                <input asp-for="purchase_date" class="form-control" />
                <span asp-validation-for="purchase_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="purchase_item" class="control-label"></label>
                <input asp-for="purchase_item" class="form-control" />
