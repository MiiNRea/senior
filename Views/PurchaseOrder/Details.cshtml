@model sproject.Models.PurchaseOrder
<div>
    <h4>PurchaseOrder</h4>
    <hr />
    </div>
    <div>
        <h5>Purchase ID : @Model.purchase_id</h5>
    </div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.purchase_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_date)
        </dd>
    </dl>


<div>
    <a asp-action="Edit" asp-route-id="@Model.purchase_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<hr>
<table>
    <tr>
        <th>
            id
        </th>
        <th>
            qty
        </th>
    </tr>
    @foreach (var item in @Model.purchase_items)
    {
        <tr>
            <td>
                @item.product_id
            </td>
            <td>
                @item.qty
            </td>
        </tr>
    }
</table>