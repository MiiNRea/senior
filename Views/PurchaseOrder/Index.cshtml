@model IEnumerable<sproject.Models.PurchaseOrder>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.purchase_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchase_item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchase_cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchaseorder_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.supplierInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.purchase_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchase_item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchase_cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchaseorder_type.Purchase_type_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productInfo.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.supplierInfo.supplier_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.purchase_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.purchase_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.purchase_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
