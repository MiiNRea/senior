@model sproject.Models.PDV
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>For Delete Purchase Order</h4>
    <hr />
    <h5>Purchase ID : @Model.purchase_id</h5>
    <dl class="row">
        <dt class = "col-sm-2">
            Purchase date
            <!-- @Html.DisplayNameFor(model => model.purchase_date) -->
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_date)
        </dd>
    </dl>
    <table class="table" id = "tb1">
    <tr>
        <th>
            Product name
        </th>
        <th>
            Supplier name
        </th>
        <th>
            Quality
        </th>
        <th>
            Cost
        </th>
        <th>
            Status
        </th>
        
    </tr>
    @foreach (var item in @Model.purchaseItems)
    {
        <tr>
            <td>
                @item.product_name
            </td>
            <td>
                @item.supplier_name
            </td>
            <td>
                @item.product_qty
            </td>
            <td>
                @item.total
            </td>
            <td>
                @item.status
            </td>
        </tr>
    }
</table>


    
    <form asp-action="Delete">
        <input type="hidden" asp-for="purchase_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

