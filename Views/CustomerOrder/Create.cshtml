@model sproject.Models.CustomerOrder

<h4>CustomerOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label class="control-label">Product id</label>
                <select asp-for="product_id" class ="form-control" asp-items="ViewBag.product_id"></select>
            </div>

            <div class="form-group">
                <label asp-for="customerorder_qty" class="control-label"></label>
                <input class ="form-control" asp-for="customerorder_qty" class="form-control" />
                <span asp-validation-for="customerorder_qty" class="text-danger"></span>
            </div>

            <div class="form-group">
             <label class="control-label">Phone number</label>
             <input class ="form-control" id="phone_number"/>
             <button type = "button" id="cmb_phonesearch">Search</button>
            </div>

            <div class="form-group">
             <label hidden class="control-label">Customer id</label>
             <input hidden asp-for="customerinfo_id" id="customer_id"/>
            </div>

            <div class="form-group">
             <label class="control-label">Customer name</label>
             <input class ="form-control" id="customer_name"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts{
    <script>
        var txt_cus = $('#customer_name');
        $(document).ready(setup);

        function setup(){
            $('#cmb_phonesearch').click(cb_clicked);
        }

        function cb_clicked(){
            var phone = $('#phone_number').val();
            //alert(phone);
            var url= "/customerInfo/customer_by_phone?phone="+phone;

            $.get(url,done);            
        }

        function done(data){
               txt_cus.val(data.name);
               $('#customer_id').val(data.id);               
        }
    </script>
}