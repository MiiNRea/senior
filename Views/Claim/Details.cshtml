@model sproject.Models.Claim

<div>
    <h4>Claim Details</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            Claim id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.claim_id)
        </dd>

        <dt class = "col-sm-2">
            Customer order id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customerOrder.customerOrder_id)
        </dd>

        <dt class = "col-sm-2">
            Problem
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.problem)
        </dd>

        <dt class = "col-sm-2">
            Claim date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.claim_date)
        </dd>

        <dt class = "col-sm-2">
           Customer name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customerInfo.customer_name)
        </dd>

        <dt class = "col-sm-2">
           Phone number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customerInfo.phone_number)
        </dd>

    </dl>
</div>
