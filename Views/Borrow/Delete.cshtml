@model sproject.Models.Borrow

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>For Delete Borrowing information</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Supplier name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.supplierInfo.supplier_name)
        </dd class>
        <dt class = "col-sm-2">
            Product name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productInfo.product_name)
        </dd class>
        <dt class = "col-sm-2">
            Quantity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.borrow_qty)
        </dd>
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.borrow_date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="borrow_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>